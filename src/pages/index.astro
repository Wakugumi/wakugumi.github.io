---
import Experience from '../components/Experience.astro';
import Education from '../components/Education.astro';
import IDCard from '../components/IDCard.astro';
import Layout from '../layouts/Layout.astro';
import config from '../lib/config';
import Project from '../components/Project.astro';
---

<Layout title={`${config.personal.name} - ${config.personal.title}`}>

	<div class="min-h-screen min-w-screen flex flex-col items-center justify-center p-6 gap-6">
		<section class="w-full flex lg:flex-row flex-col gap-12 m-auto lg:max-w-6xl" id="about">
			<div class="lg:w-1/3 lg:flex-shrink-0">
				<IDCard />
			</div>
			<div class="lg:w-2/3 flex flex-col justify-around gap-4">
				<p>
					{config.personal.summary}
				</p>
				<div class="inline-flex justify-around">
					{config.links!.map((link, _) => (
						<a href={link.url} class="relative group mr-4 text-4xl text-slate-600 hover:text-slate-800" target="_blank"
							rel="noopener noreferrer" aria-label={link.label}>
							<i class={link.icon}></i>
							<span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-2 py-1 rounded bg-slate-800 text-white text-xs opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap">
								{link.label}
							</span>
						</a>
					))}
				</div>
			</div>

		</section>


		<section class="w-full flex lg:flex-row flex-col gap-12 m-auto lg:max-w-6xl mt-12" id="experience">
			<Experience />
		</section>

		<section class="w-full flex lg:flex-row flex-col gap-12 m-auto lg:max-w-6xl mt-12" id="education">
			<Education />
		</section>

    <section class="w-full flex lg:flex-row flex-col gap-12 m-auto lg:max-w-6xl mt-12" id="projects">
      <Project />
    </section>




		<section class="w-full flex lg:flex-row flex-col gap-12 m-auto lg:max-w-6xl mt-12" id="contact">
			<p class="text-center w-full">Ongoing development</p>
		</section>
	</div>
</Layout>
